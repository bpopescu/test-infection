{
  "name": "bpopescu/infection",
  "description": "infection",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bogdan Popescu",
      "email": "bogdan@bxg.ro"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "mockery/mockery": "*",
    "infection/infection": "*"
  },
  "autoload": {
    "psr-4": {
      "bpopescu\\infection\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "bpopescu\\infection\\tests\\": "./tests"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "infection": "./vendor/bin/infection"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}