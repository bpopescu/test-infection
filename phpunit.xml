<phpunit bootstrap="./vendor/autoload.php">
    <testsuites>
        <testsuite name="all">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <report>
            <html outputDirectory="./gen/html-coverage" lowUpperBound="75" highLowerBound="90"/>
        </report>
    </coverage>
</phpunit>